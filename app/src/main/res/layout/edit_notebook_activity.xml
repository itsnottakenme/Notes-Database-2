<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView   android:text="Notebook name:"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newNotebookTextView"/>

    <EditText   android:id="@+id/newNotebookEditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            />
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Notebook Type:"/>

    <Spinner
            android:id="@+id/notebook_view_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Notebook color:"
                />
        <Button android:id="@+id/notebook_color_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change color"

                />

    <CheckBox   android:id="@+id/checkbox_default_rollover"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="default rollover " />



    <!--            OK and CANCEL Buttons          -->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="41dp" android:layout_gravity="right" android:gravity="right">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Ok"
                android:id="@+id/okButton" android:minWidth="75dp"
                android:onClick="onClick"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/cancelButton" android:layout_gravity="center_horizontal|bottom"
                android:minWidth="75dp"
                android:onClick="onClick"/>
    </LinearLayout>


</LinearLayout>