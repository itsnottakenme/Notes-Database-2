<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:padding="1px"
                  android:gravity="bottom">

        <!--Menu Items -->


        <ImageButton
                android:id="@+id/test_button"
                style="@style/toolbar_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/sym_contact_card"
                />


        <ImageButton
                android:id="@+id/interaction_mode_button"
                style="@style/toolbar_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/sym_contact_card"
                />

        <ImageButton
                android:id="@+id/view_type_button"
                style="@style/toolbar_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_menu_moreoverflow"
                />

        <ImageButton
                android:id="@+id/camera_button"
                style="@style/toolbar_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_camera"
                />


        <ImageButton
                android:id="@+id/bullet_button"
                style="@style/toolbar_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_list_bullets"
                />




    </LinearLayout>




