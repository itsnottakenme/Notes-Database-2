<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
        >



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:padding="1px"
              android:gravity="bottom">

        <!--Menu Items -->




    <ImageButton
            android:id="@+id/interaction_mode_button"
            style="@style/toolbar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/sym_contact_card"
            />



    <ImageButton
            android:id="@+id/edit_notebook_button"
            style="@style/toolbar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_menu_moreoverflow"
            />


    <ImageButton
                android:id="@+id/todo_sort_button"
                style="@style/toolbar_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_menu_sort_by_size"
                />











</LinearLayout>












</LinearLayout>
