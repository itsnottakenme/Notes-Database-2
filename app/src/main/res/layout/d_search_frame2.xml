<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/search_box"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <!-- ###########################Search box################################################## -->
    <LinearLayout android:id="@+id/search_line"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
            >



        <TextView   android:text="Search:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                />

        <EditText   android:id="@+id/search_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:singleLine="true"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="1"/>

        <ImageButton    android:id="@+id/search_cancel_button"
                        style="@style/toolbar_button"
                        android:src="@drawable/ic_menu_close_clear_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                />

    </LinearLayout>
    <!-- ###################Tag Box######################################### -->

    <TextView   android:id="@+id/selected_tag_textview"
                android:hint="search tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"/>



    <ndb.ui.views.FlowLayout
            android:id="@+id/search_list_tag_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            />

    <ScrollView android:id="@+id/tags_scrollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">


    </ScrollView>


</LinearLayout>



